<Window x:Class="Hurricane.MagicArrow.MagicArrowWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="45" Width="10" ResizeMode="NoResize" AllowsTransparency="True" Background="Transparent" WindowStartupLocation="Manual" ShowInTaskbar="False" Left="0" WindowStyle="None" MouseDown="Window_MouseDown" Topmost="True">
    <Window.Triggers >
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard >
                <Storyboard >
                    <DoubleAnimation From="-10" To="0" Storyboard.TargetProperty="Left" Duration="00:00:00.05"></DoubleAnimation>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>
    <Image Source="/Resources/MagicArrow/MagicArrow.png" Height="45" Width="10"/>
</Window>
