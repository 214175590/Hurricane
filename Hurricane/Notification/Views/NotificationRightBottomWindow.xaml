<Window x:Class="Hurricane.Notification.Views.NotificationRightBottomWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converter="clr-namespace:Hurricane.Extensions.Converter"
        Title="HurricaneNotification" Height="100" Width="480" Topmost="True" AllowsTransparency="True" WindowStyle="None" ShowInTaskbar="False" ShowActivated="False" x:Name="window" Opacity="0.95">
    <Window.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard >
                <Storyboard>
                    <DoubleAnimation From="0.5" To="0.95" Duration="00:00:00.5" Storyboard.TargetProperty="Opacity"></DoubleAnimation>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>
    <Window.Resources>
        <SolidColorBrush x:Key="TextColor" Color="#FF666666"/>
        <converter:RoundSizeConverter x:Key="RoundSizeConverter"/>
    </Window.Resources>
    <Border BorderThickness="1" BorderBrush="{StaticResource AccentColorBrush}">
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid Width="80" Height="80">
                <Image Source="/Resources/GUI/music.png" RenderOptions.BitmapScalingMode="HighQuality" x:Name="imgPlaceholder" Width="70" Height="70"/>
                <Image Source="{Binding ElementName=window,Path=TrackImage}" x:Name="imgAlbum" Visibility="Collapsed" Width="80" Height="80" RenderOptions.BitmapScalingMode="HighQuality"/>
            </Grid>

            <StackPanel Orientation="Vertical" Grid.Column="1" Margin="10,0,0,0" VerticalAlignment="Center">
                <TextBlock Text="{Binding ElementName=window,Path=CurrentTrack.Artist}" FontWeight="Bold" Foreground="{StaticResource DarkColorBrush}"/>
                <TextBlock Text="{Binding ElementName=window,Path=CurrentTrack.Title}" FontSize="20" Foreground="{StaticResource TextColor}"/>
                <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                    <StackPanel.Resources>
                        <Style TargetType="TextBlock">
                            <Setter Property="FontSize" Value="12"/>
                            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </StackPanel.Resources>
                    <TextBlock Text="{Binding ElementName=window,Path=CurrentTrack.Duration}" FontWeight="Bold"/>
                    <TextBlock Text=" - "/>
                    <TextBlock Text="{Binding ElementName=window,Path=CurrentTrack.Extension}"/>
                    <TextBlock Text=" :: "/>
                    <TextBlock Text="{Binding ElementName=window,Path=CurrentTrack.kHz}"/>
                    <TextBlock Text=" kHz :: "/>
                    <TextBlock Text="{Binding ElementName=window,Path=CurrentTrack.TrackInformations.Length,Converter={StaticResource RoundSizeConverter}}"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</Window>
