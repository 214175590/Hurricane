<controls:MetroWindow x:Class="Hurricane.Designer.DesignerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:viewModels="clr-namespace:Hurricane.Designer"
        Title="{StaticResource Designer}" MinHeight="600" MinWidth="1000" Height="640" Width="1000" GlowBrush="{StaticResource AccentColorBrush}" DataContext="{x:Static viewModels:DesignerViewModel.Instance}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Menu>
            <MenuItem Header="{StaticResource Project}">
                <MenuItem Header="{StaticResource New}">
                    <MenuItem Header="{StaticResource ThemePack}"/>
                    <Separator />
                    <MenuItem Header="{StaticResource ColorTheme}"/>
                    <MenuItem Header="{StaticResource BaseTheme}"/>
                </MenuItem>
            </MenuItem>
        </Menu>
        <ContentControl Content="{Binding CurrentView}" Grid.Row="1"/>
    </Grid>
</controls:MetroWindow>
